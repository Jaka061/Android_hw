<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <HorizontalScrollView
    android:id="@+id/horizont1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn1"
                android:text="btn1"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn2"
                android:text="btn2"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn3"
                android:text="btn3"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn2"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn4"
                android:text="btn4"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn3"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn5"
                android:text="btn5"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn4"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn6"
                android:text="btn6"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/btn5"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:src="@mipmap/ic_launcher_round"
                app:layout_constraintTop_toBottomOf="@+id/horizont1"
                app:layout_constraintBottom_toTopOf="@id/img3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img2"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:src="@mipmap/ic_launcher_round"
                app:layout_constraintTop_toBottomOf="@+id/horizont1"
                app:layout_constraintBottom_toTopOf="@id/img4"
                app:layout_constraintStart_toEndOf="@+id/img"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:src="@mipmap/ic_launcher_round"
                app:layout_constraintTop_toBottomOf="@+id/img"
                app:layout_constraintBottom_toTopOf="@id/img5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img4"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:src="@mipmap/ic_launcher_round"
                app:layout_constraintTop_toBottomOf="@+id/img2"
                app:layout_constraintBottom_toTopOf="@id/img6"
                app:layout_constraintStart_toEndOf="@+id/img3"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img5"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:src="@mipmap/ic_launcher_round"
                app:layout_constraintTop_toBottomOf="@+id/img3"
                app:layout_constraintBottom_toTopOf="@id/img7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img6"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img6"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:src="@mipmap/ic_launcher_round"
                app:layout_constraintTop_toBottomOf="@+id/img4"
                app:layout_constraintBottom_toTopOf="@id/img8"
                app:layout_constraintStart_toEndOf="@+id/img5"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img7"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:src="@mipmap/ic_launcher_round"
                app:layout_constraintTop_toBottomOf="@+id/img5"
                app:layout_constraintBottom_toTopOf="@id/img9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img8"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img8"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:src="@mipmap/ic_launcher_round"
                app:layout_constraintTop_toBottomOf="@+id/img6"
                app:layout_constraintBottom_toTopOf="@id/img10"
                app:layout_constraintStart_toEndOf="@+id/img7"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img9"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:src="@mipmap/ic_launcher_round"
                app:layout_constraintTop_toBottomOf="@+id/img7"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img10"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img10"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:src="@mipmap/ic_launcher_round"
                app:layout_constraintTop_toBottomOf="@+id/img8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img9"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
