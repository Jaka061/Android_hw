<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">@color/purple_500</item>
    </style>
    <style name="text">
        <item name="android:text">@string/auto</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="textGl">
        <item name="android:text">@string/glavn</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Edit">
        <item name="android:hint">@string/edit_text</item>
        <item name="android:lines">1</item>
        <item name="android:padding">15dp</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:background">@drawable/btn</item>
    </style>

    <style name="EditP">
        <item name="android:hint">@string/password</item>
        <item name="android:padding">15dp</item>
        <item name="android:lines">1</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:background">@drawable/btn</item>
    </style>
    <style name="btnV">
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/btn</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/view</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">15dp</item>
    </style>
    <style name="icon" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>
</resources>